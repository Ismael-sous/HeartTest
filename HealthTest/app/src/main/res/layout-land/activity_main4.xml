<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#037748"
    android:backgroundTint="#2E4340"
    tools:context=".MainActivityPage4">

  <ScrollView
      android:layout_width="0dp"
      android:layout_height="0dp"
      android:layout_marginStart="8dp"
      android:layout_marginTop="16dp"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="16dp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

      <ImageView
          android:id="@+id/imageView3"
          android:layout_width="match_parent"
          android:layout_height="87dp"
          android:contentDescription="@string/my_heart_monitoring"
          app:srcCompat="@drawable/nicepng_heartbeat_line_png_650184" />

      <TextView
          android:id="@+id/displayName2"
          android:layout_width="match_parent"
          android:layout_height="41dp"
          android:text="@string/my_heart_monitoring"
          android:textAlignment="center"
          android:textColor="#EFEBEB"
          android:textSize="16sp" />

      <TextView
          android:id="@+id/textview3"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:text="@string/have_you_already_checked_with_your_gp_about_your_cardiovascular_risk"
          android:textAlignment="viewStart"
          android:textColor="#FFFFFF"
          android:textSize="16sp" />

      <RadioGroup
          android:id="@+id/radioGroup"
          android:layout_width="252dp"
          android:layout_height="60dp"
          android:layout_gravity="center"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/y1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/yes"
            android:textColor="#F3F2F2" />

        <RadioButton
            android:id="@+id/n1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no"
            android:textColor="#FFFDFD" />

      </RadioGroup>

      <TextView
          android:id="@+id/textView4"
          android:layout_width="match_parent"
          android:layout_height="23dp"
          android:text="@string/have_you_ever_had_a_cardiac_check_up"
          android:textAlignment="viewStart"
          android:textColor="#FFFFFF"
          android:textSize="16sp" />

      <RadioGroup
          android:id="@+id/radioGroup2"
          android:layout_width="249dp"
          android:layout_height="57dp"
          android:layout_gravity="center"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/y2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/yes"
            android:textColor="#F3F2F2" />

        <RadioButton
            android:id="@+id/n2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no"
            android:textColor="#FFFDFD" />

      </RadioGroup>

      <TextView
          android:id="@+id/textView5"
          android:layout_width="match_parent"
          android:layout_height="32dp"
          android:text="@string/have_you_ever_consulted_a_cardiologist"
          android:textAlignment="viewStart"
          android:textColor="#FFFFFF"
          android:textSize="16sp" />

      <RadioGroup
          android:id="@+id/radioGroup3"
          android:layout_width="250dp"
          android:layout_height="65dp"
          android:layout_gravity="center"
          android:orientation="horizontal">

        <RadioButton
            android:id="@+id/y3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/yes"
            android:textColor="#F3F2F2" />

        <RadioButton
            android:id="@+id/n3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/no"
            android:textColor="#FFFDFD" />

      </RadioGroup>

      <Button
          android:id="@+id/previous3Button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:backgroundTint="#B17866"
          android:onClick="onClickPrevious3"
          android:text="@string/previous"
          android:textColor="#000000" />

      <Button
          android:id="@+id/next3Button"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:backgroundTint="#B17866"
          android:onClick="onClickNext3"
          android:text="@string/next"
          android:textColor="#000000" />
    </LinearLayout>
  </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>